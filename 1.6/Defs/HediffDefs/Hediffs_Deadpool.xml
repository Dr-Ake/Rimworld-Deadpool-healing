<?xml version="1.0" encoding="utf-8"?>

<Defs>
  <HediffDef>
    <defName>DP_HealingFactor</defName>
    <defaultLabelColor>(0.3, 0.7, 0.7)</defaultLabelColor>
    <description>You're probably thinking, 'My colonist just got turned into a kebab!' Well, I may be super, but I'm no hero. This healing factor means I can regenerate from pretty much anything. Now, where are the chimichangas?</description>
    <label>Healing Factor</label>
    <isBad>false</isBad>
    <scenarioCanAdd>true</scenarioCanAdd>
    <stages>
      <li>
        <label>FirstDeath</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>Barely Dead</label>
        <painFactor>0.0</painFactor>
        <minSeverity>0.6</minSeverity>
      </li>
      <li>
        <label>Full Factor</label>
        <painFactor>0.0</painFactor>
        <minSeverity>1</minSeverity>
      </li>
      <li>
        <label>Mostly Deadproof</label>
        <painFactor>0.0</painFactor>
        <minSeverity>2</minSeverity>
      </li>
      <li>
        <label>Can't Touch This</label>
        <painFactor>0.0</painFactor>
        <minSeverity>4</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <postFactor>1.05</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <label>Seriously Stop</label>
        <painFactor>0.0</painFactor>
        <minSeverity>7</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>1.05</postFactor>
          </li>
          <li>
            <capacity>Moving</capacity>
            <postFactor>1.05</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <label>Maximum Effort</label>
        <painFactor>0.0</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>1.1</postFactor>
          </li>
          <li>
            <capacity>Moving</capacity>
            <postFactor>1.1</postFactor>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <postFactor>1.1</postFactor>
          </li>
        </capMods>
        <minSeverity>10</minSeverity>
      </li>
    </stages>
  </HediffDef>
  <HediffDef>
    <hediffClass>HediffWithComps</hediffClass>
    <defName>DP_Stunted</defName>
    <defaultLabelColor>(1, 1, 1)</defaultLabelColor>
    <description>Their healing factor is having a rough day and hasn't quite kicked in yet.</description>
    <label>Stunted Factor</label>
    <stages>
      <li>
        <label>recovering</label>
      </li>
      <li>
        <label>unstable</label>
        <minSeverity>1</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>0.90</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <label>crippling</label>
        <minSeverity>2</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>0.50</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <label>catatonic</label>
        <minSeverity>3</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SelfHeal">
        <healAmount>0.00005</healAmount>
      </li>
    </comps>
  </HediffDef>

  <HediffDef>
    <defName>DP_StuntedProc</defName>
    <defaultLabelColor>(1, 1, 1)</defaultLabelColor>
    <description>Internal note: this pawn will wake up with a stunted healing factor</description>
    <label>Stunted Flag</label>
    <stages>
      <li>
        <label>stunted</label>
        <becomeVisible>false</becomeVisible>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>DP_DeathTimer</defName>
    <defaultLabelColor>(1, 1, 1)</defaultLabelColor>
    <description>Counts the moments until this pawn springs back from the grave.</description>
    <label>DeathTimer</label>
    <stages>
      <li>
        <label>DeathTimer</label>
        <becomeVisible>false</becomeVisible>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <hediffClass>HediffWithComps</hediffClass>
    <defName>DP_DeathStasis</defName>
    <defaultLabelColor>(1, 1, 1)</defaultLabelColor>
    <description>Too broken to heal right away, this pawn is parked in a death nap until patched up.</description>
    <label>Death Nap</label>
    <isBad>false</isBad>
    <stages>
      <li>
        <label>Death Nap</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>Groggy</label>
        <minSeverity>0.5</minSeverity>
        <becomeVisible>true</becomeVisible>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.75</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>Drained</label>
        <minSeverity>0.75</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SelfHeal">
        <healAmount>0.0006</healAmount>
      </li>
    </comps>
  </HediffDef>

  <HediffDef>
    <defName>DP_regrowing</defName>
    <defaultLabelColor>(0.15, 0.6, 0.2)</defaultLabelColor>
    <description>This body part is regrowing. Give it a minute.</description>
    <isBad>false</isBad>
    <label>Regrowing</label>
    <stages>
      <li>
        <label>stitching</label>
        <becomeVisible>true</becomeVisible>
        <partEfficiencyOffset>-1.0</partEfficiencyOffset>
      </li>
      <li>
        <label>growing</label>
        <becomeVisible>true</becomeVisible>
        <partEfficiencyOffset>-1.0</partEfficiencyOffset>
        <minSeverity>0.1</minSeverity>
      </li>
      <li>
        <label>shaping</label>
        <becomeVisible>true</becomeVisible>
        <partEfficiencyOffset>-0.75</partEfficiencyOffset>
        <minSeverity>0.5</minSeverity>
      </li>
      <li>
        <label>developing</label>
        <becomeVisible>true</becomeVisible>
        <partEfficiencyOffset>-0.5</partEfficiencyOffset>
        <minSeverity>0.75</minSeverity>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="DiseaseBase">
    <defName>DP_adjusting</defName>
    <defaultLabelColor>(0.75, 1, 0.75)</defaultLabelColor>
    <description>The brand-new part is settling in. It'll be fine tomorrow.</description>
    <label>Adjusting</label>
    <stages>
      <li>
        <partEfficiencyOffset>-0.1</partEfficiencyOffset>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>20000</min>
          <max>60000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
  </HediffDef>

  <HediffDef>
    <hediffClass>HediffWithComps</hediffClass>
    <defName>DP_revived</defName>
    <description>Having cheated death, this pawn feels strangely upbeat.</description>
    <defaultLabelColor>(1, 1, 1)</defaultLabelColor>
    <label>Back Again</label>
    <stages>
      <li>
        <statOffsets>
          <MentalBreakThreshold>-0.05</MentalBreakThreshold>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.5</minSeverity>
        <statOffsets>
          <MentalBreakThreshold>-0.10</MentalBreakThreshold>
        </statOffsets>
      </li>
      <li>
        <minSeverity>1</minSeverity>
        <statOffsets>
          <MentalBreakThreshold>-0.15</MentalBreakThreshold>
        </statOffsets>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SelfHeal">
        <healAmount>0.0006</healAmount>
      </li>
    </comps>
  </HediffDef>

  <HediffDef>
    <hediffClass>HediffWithComps</hediffClass>
    <defName>DP_revivedFirst</defName>
    <description>First death jitters make this pawn a little twitchy.</description>
    <defaultLabelColor>(0.8, 0.4, 0.2)</defaultLabelColor>
    <label>Back Again</label>
    <stages>
      <li>
        <statOffsets>
          <MentalBreakThreshold>0.05</MentalBreakThreshold>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.5</minSeverity>
        <statOffsets>
          <MentalBreakThreshold>0.10</MentalBreakThreshold>
        </statOffsets>
      </li>
      <li>
        <minSeverity>1</minSeverity>
        <statOffsets>
          <MentalBreakThreshold>0.15</MentalBreakThreshold>
        </statOffsets>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SelfHeal">
        <healAmount>0.0006</healAmount>
      </li>
    </comps>
  </HediffDef>

  <HediffDef>
    <defName>DP_theHunger</defName>
    <description>A weird hunger keeps bugging this pawn. Must be taco time.</description>
    <defaultLabelColor>(1, 0.5, 0.5)</defaultLabelColor>
    <label>Uncanny Hunger</label>
    <initialSeverity>0.01</initialSeverity>
    <stages>
      <li>
        <label>peckish</label>
        <minSeverity>0.1</minSeverity>
        <hungerRateFactorOffset>0.1</hungerRateFactorOffset>
      </li>
      <li>
        <label>famished</label>
        <minSeverity>2.5</minSeverity>
        <hungerRateFactorOffset>0.25</hungerRateFactorOffset>
      </li>
      <li>
        <label>ravenous</label>
        <minSeverity>5</minSeverity>
        <hungerRateFactorOffset>0.5</hungerRateFactorOffset>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>DP_hungerHolder</defName>
    <description>Helper hediff used to track hunger for the temporarily deceased.</description>
    <label>Hunger Placeholder</label>
	  <stages>
		  <li>
			  <label>Hidden</label>
			  <becomeVisible>false</becomeVisible>
		  </li>
	  </stages>
	<isBad>false</isBad>
  </HediffDef>

	<HediffDef>
		<defName>DP_noBrainCheat</defName>
		<description>This is a hediff to track which pawns shouldn't die from brain loss</description>
		<label>No brain cheat</label>
		<isBad>false</isBad>
		<stages>
			<li>
				<label>Hidden</label>
				<becomeVisible>false</becomeVisible>
			</li>
		</stages>
	</HediffDef>
</Defs>