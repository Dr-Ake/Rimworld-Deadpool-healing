<Defs>
  <SpecialThingFilterDef>
    <defName>AllowImmortalCorpses</defName>
    <label>allow healing-factor corpses</label>
    <description>Allow the corpses of the hard-to-kill crowd.</description>
    <parentCategory>CorpsesHumanlike</parentCategory>
    <allowedByDefault>false</allowedByDefault>
    <saveKey>allowCorpsesDeadpool</saveKey>
    <workerClass>Immortals.Source.SpecialThingFilterWorker_CorpsesImmortal</workerClass>
  </SpecialThingFilterDef>
  
  <SpecialThingFilterDef>
    <defName>AllowMortalCorpses</defName>
    <label>allow mortal corpses</label>
