    <parentCategory>CorpsesHumanlike</parentCategory>
    <allowedByDefault>false</allowedByDefault>
    <saveKey>allowCorpsesMmortal</saveKey>
    <workerClass>Immortals.Source.SpecialThingFilterWorker_CorpsesMortal</workerClass>
  </SpecialThingFilterDef>
  
