<?xml version="1.0" encoding="utf-8"?>

<Defs>
  <ThingDef>
    <defName>DP_HealingInjector</defName>
    <label>healing factor injector</label>
    <description>A single-use injector that permanently grants the Healing Factor. Difficult to fabricate, but priceless to the right colonist.</description>
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <techLevel>Spacer</techLevel>
    <tradability>All</tradability>
    <tradeTags>
      <li>ExoticMisc</li>
      <li>TechSpecialty</li>
    </tradeTags>
    <thingCategories>
      <li>Artifacts</li>
    </thingCategories>
    <stackLimit>5</stackLimit>
    <useHitPoints>false</useHitPoints>
    <graphicData>
      <texPath>Things/Item/Deadpool/HealingInjector</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>3500</MarketValue>
      <Mass>0.2</Mass>
      <Flammability>0</Flammability>
      <Beauty>0</Beauty>
      <MaxHitPoints>50</MaxHitPoints>
    </statBases>
    <comps>
      <li Class="CompProperties_Usable">
        <useLabel>inject</useLabel>
      </li>
      <li Class="CompProperties_UseEffectGiveHediff">
        <hediffDef>DP_HealingFactor</hediffDef>
        <severity>1.0</severity>
      </li>
    </comps>
  </ThingDef>
</Defs>


